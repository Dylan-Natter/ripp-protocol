{
  "name": "ripp-cli",
  "version": "1.0.1",
  "description": "Official CLI validator for Regenerative Intent Prompting Protocol (RIPP)",
  "main": "index.js",
  "bin": {
    "ripp": "index.js"
  },
  "scripts": {
    "test": "node test/checklist-parser.test.js"
  },
  "keywords": [
    "ripp",
    "validator",
    "specification",
    "schema",
    "yaml",
    "json"
  ],
  "author": "RIPP Protocol Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dylan-Natter/ripp-protocol.git",
    "directory": "tools/ripp-cli"
  },
  "bugs": {
    "url": "https://github.com/Dylan-Natter/ripp-protocol/issues"
  },
  "homepage": "https://dylan-natter.github.io/ripp-protocol",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pkg": {
    "assets": [
      "../../schema/**/*"
    ],
    "targets": [
      "node20-macos-arm64",
      "node20-macos-x64"
    ],
    "outputPath": "dist"
  }
}
